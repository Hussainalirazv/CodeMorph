{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@mui/icons-material/*": ["./node_modules/@mui/icons-material/*"]
    }
  }
}
